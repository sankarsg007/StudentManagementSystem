@model StudentManagementSystem.Models.Student

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Student Registration</title>
    <link rel="stylesheet" href="~/css/RegisterCSS.css" />
   
    <script>
        function showAlert() {
            alert('Student Registration Successful');
        }
    </script>
</head>
<body>
    <div class="container">
        <h2>Student Registration</h2>

        @using (Html.BeginForm("Register", "Student", FormMethod.Post, new { @class = "form-horizontal", role = "form", onsubmit = "showAlert()" }))
        {
            @Html.AntiForgeryToken()

            <div class="input-group1">
                <input type="text"
                       id="FirstName"
                       name="FirstName"
                       placeholder="Enter First Name"
                       class="form-control"
                       required />
            </div>

            <div class="input-group1">
                <input type="text"
                       id="LastName"
                       name="LastName"
                       placeholder="Enter Last Name"
                       class="form-control"
                       required />
            </div>

            <div class="input-group1">
                <input type="tel"
                       id="PhoneNumber"
                       name="PhoneNumber"
                       placeholder="Enter Phone Number"
                       class="form-control"
                       required />
            </div>

            <div class="input-group1">
                <input type="email"
                       id="Email"
                       name="Email"
                       placeholder="Enter Email"
                       class="form-control"
                       required />
            </div>

            <div class="input-group1">
                <input type="password"
                       id="Password"
                       name="Password"
                       placeholder="Enter Password"
                       class="form-control"
                       required />
            </div>

            <div class="input-group1">
                <input type="text"
                       id="BloodGroup"
                       name="BloodGroup"
                       placeholder="Enter Blood Group"
                       class="form-control"
                       required />
            </div>

            <div class="input-group1">
                <input type="text"
                       id="Location"
                       name="Location"
                       placeholder="Enter Location"
                       class="form-control"
                       required />
            </div>

            <button type="submit" class="btn">Register</button>
        }

        <p class="para">
            Already have an account?<a href="@Url.Action("LoginStudent", "Student")" class="login">Login</a>
        </p>

    </div>
</body>
</html>
